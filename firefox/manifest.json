{
    "manifest_version": 2,
    "name": "Borderify",
    "version": "1.0",

    "description": "Adds a red border to all webpages matching mozilla.org.",

    "icons": {
        "48": "icons/border-48.png"
    },

    "content_scripts": [
        {
            "matches": ["*://*.mozilla.org/*"],
            "js": ["borderify.js"]
        }
    ],

    "background": {
        "scripts": ["background-test.js"]
    },

    "commands": {
        "search-test": {
            "suggested_key": {
                "default": "Ctrl+Shift+F"
            },
            "description": "Do a search"
        }
    }
}
