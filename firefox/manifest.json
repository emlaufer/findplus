{
    "manifest_version": 2,
    "name": "findplus",
    "version": "1.0",

    "description": "Adds a red border to all webpages matching mozilla.org.",

    "icons": {
        "48": "icons/border-48.png"
    },

    "web_accessible_resources": [
        "searchbar.html"
    ],

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/jquery-3.3.1.js",
                "js/compromise.js",
                "js/mark.min.js",
                "markwords.js",
                "define.js",
                "findplus.js"
            ],
            "css": ["searchbar.css"]
        }
    ],

    "background": {
        "scripts": []
    },

    "permissions": [
        "activeTab"
    ]
}
	
